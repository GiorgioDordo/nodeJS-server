<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/errorMessage.css">
  </head>

  <body>
    <%- include('../partials/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
    <p class="error-message"><%= errorMessage %></p>
  <% } %>
      <form action="/login" class="login-form" method="POST" novalidate>
        <div class="form-control">
          <label for="email">Email</label>
          <input 
              class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
              type="email" 
              id="email" 
              name="email"
              value="<%= oldInput.email %>" />
        </div>
        <div class="form-control">
          <label for="password">Password</label>
          <input 
              class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
              type="password" 
              id="password" 
              name="password"
              value="<%= oldInput.password %>" />
        </div>
        <button type="submit" class="btn">Login</button>
        <input type="hidden" name="csrfToken" value="<%= csrfToken %>">
      </form>
      <div class="centered">
          <a href="/reset">Reset Password</a>
      </div>
    </main>
<%- include('../partials/end.ejs') %>